{
  "name": "logos-liturgy",
  "displayName": "Logos Liturgy",
  "description": "Orthodox programming support",
  "version": "0.1.0",
  "engines": { "vscode": "^1.70.0" },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:logos"],
  "main": "./client.js",
  "contributes": {
    "languages": [
      {
        "id": "logos",
        "aliases": ["Logos", "LG"],
        "extensions": [".lg"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
