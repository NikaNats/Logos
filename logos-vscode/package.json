{
    "name": "logos-lang",
    "displayName": "Logos (Orthodox)",
    "description": "Liturgical programming language support for Logos (.lg)",
    "version": "1.0.0",
    "publisher": "Theophilus",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:logos"
    ],
    "scripts": {
        "compile": "tsc -p .",
        "package": "npm run compile ; vsce package"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^18.19.0",
        "@types/vscode": "^1.75.0",
        "typescript": "^5.3.3"
    },
    "contributes": {
        "languages": [{
            "id": "logos",
            "aliases": ["Logos", "logos"],
            "extensions": [".lg"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "logos",
            "scopeName": "source.logos",
            "path": "./syntaxes/logos.tmLanguage.json"
        }]
    }
}
