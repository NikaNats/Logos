{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Logos",
    "scopeName": "source.logos",
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#keywords" },
        { "include": "#constants" },
        { "include": "#support" },
        { "include": "#definitions" },
        { "include": "#function-calls" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.logos",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.logos",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.logos",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.logos",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.logos",
                    "match": "\\b(chant|discern|otherwise|vigil|confess|amen|contemplate|aspect|silence)\\b"
                },
                {
                    "name": "keyword.other.statement.logos",
                    "match": "\\b(proclaim|inscribe|amend|offer|apocrypha|tradition|transfigure|into|supplicate|write)\\b"
                },
                {
                    "name": "storage.type.logos",
                    "match": "\\b(mystery|icon)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.true.logos",
                    "match": "\\bVerily\\b"
                },
                {
                    "name": "constant.language.boolean.false.logos",
                    "match": "\\bNay\\b"
                },
                {
                    "name": "constant.language.null.logos",
                    "match": "\\b(Void|None)\\b"
                }
            ]
        },
        "support": {
            "patterns": [
                {
                    "name": "support.type.logos",
                    "match": "\\b(HolyInt|HolyFloat|Text|String|Bool|Procession)\\b"
                },
                {
                    "name": "support.function.builtin.logos",
                    "match": "\\b(measure|adorn|extract|purge|passage|now|abs|max|min|pow|say|say_int|ask|ask_int)\\b"
                }
            ]
        },
        "definitions": {
            "patterns": [
                {
                    "match": "\\b(mystery)\\s+([a-z][a-z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.function.logos" },
                        "2": { "name": "entity.name.function.logos" }
                    }
                },
                {
                    "match": "\\b(icon)\\s+([A-Z][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": { "name": "storage.type.class.logos" },
                        "2": { "name": "entity.name.type.class.logos" }
                    }
                }
            ]
        },
        "function-calls": {
            "name": "meta.function-call.logos",
            "match": "\\b([a-z][a-z0-9_]*)\\s*(?=\\()",
            "captures": {
                "1": { "name": "entity.name.function.logos" }
            }
        }
    }
}
