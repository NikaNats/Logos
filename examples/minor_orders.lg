mystery main() {
    proclaim "--- Minor Orders (Canonical) ---";

    inscribe is_holy: Bool = Verily;
    inscribe letter: Text = "A";
    inscribe mask: HolyInt = 255;
    inscribe inferred_bool = Nay;

    contemplate (is_holy) {
        aspect Verily: proclaim "It is true.";
        aspect Nay: proclaim "It is not true.";
    } amen

    proclaim letter;
    proclaim mask;
    proclaim inferred_bool;
} amen
