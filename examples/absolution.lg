mystery main() {
    proclaim "--- Absolution (Canonical) ---";

    inscribe value = 3;

    contemplate (value) {
        aspect 0: proclaim "Already absolved.";
        aspect _: {
            proclaim "Absolving by setting value to 0.";
            inscribe value = 0;
        }
    } amen

    proclaim value;
} amen
