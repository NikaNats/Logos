mystery main() {
    proclaim "--- Kairos (Canonical) ---";

    inscribe gold: HolyInt = 0;
    proclaim "Waiting until gold >= 100...";

    chant gold < 100 {
        inscribe gold = gold + 25;
        proclaim gold;
    } amen

    contemplate (gold >= 100) {
        aspect Verily: proclaim "The time is fulfilled.";
        aspect Nay: proclaim "Not yet.";
    } amen
} amen
