tradition "../lib/genesis.lg";

mystery main() -> Void {
    proclaim "--- LOGOS SYSTEM CHECK ---";

    # 1. Check Time (Chronos)
    inscribe t0 = now();
    proclaim "System Time:";
    proclaim t0;

    # 2. Check Math
    inscribe a = 10;
    inscribe b = 20;
    discern (a < b) {
        proclaim "Math is sound (10 < 20).";
    } otherwise {
        proclaim "Heresy: Math is broken.";
    } amen

    # 3. Check Files (Genesis)
    inscribe log = open_scroll("monastery.log", 1); # 1 = Write Mode

    contemplate (log) {
        aspect 0: proclaim "Error: Could not open scroll.";
        aspect _: {
            write_line(log, "The Liturgy was performed.");
            proclaim "Log written to monastery.log";
            close_scroll(log);
        }
    } amen

    # 4. Final Benediction
    inscribe t1 = now();
    proclaim "Execution Time (ms):";
    proclaim (t1 - t0);
} amen
